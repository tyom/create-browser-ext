{
  "name": "chrome-react",
  "description": "Chrome: React + Styled Components + Tailwind",
  "scripts": {
    "build": "del dist && NODE_ENV=production webpack",
    "watch": "del dist && NODE_ENV=development webpack",
    "format": "prettier --write '**/*.{ts,tsx,css,html}'"
  },
  "babelMacros": {
    "twin": {
      "preset": "styled-components"
    }
  },
  "dependencies": {
    "@babel/preset-react": "^7.12.13",
    "crx-hotreload": "^1.0.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-frame-component": "^4.1.3",
    "react-icons": "^4.2.0",
    "styled-components": "^5.2.1",
    "twin.macro": "^2.2.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.12.17",
    "@babel/preset-typescript": "^7.12.17",
    "@types/chrome": "^0.0.129",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/react-frame-component": "^4.1.1",
    "@types/styled-components": "^5.1.7",
    "babel-loader": "^8.2.2",
    "babel-plugin-macros": "^3.0.1",
    "copy-webpack-plugin": "^7.0.0",
    "del-cli": "^3.0.1",
    "prettier": "^2.2.1",
    "typescript": "^4.1.5",
    "webpack": "^5.21.2",
    "webpack-cli": "^4.5.0"
  }
}
